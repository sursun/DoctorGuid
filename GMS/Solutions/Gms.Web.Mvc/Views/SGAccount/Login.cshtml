
@model SecurityGuard.ViewModels.LogOnViewModel

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>山东大学第二医院  系统集成平台</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      
      @*<script src="@Url.Content("~/Content/SecurityGuard/scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@
      <link type="text/css" rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap/bootstrap.min.css")"/>
      @*<link type="text/css" rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap/flat-ui.css")"/>*@


    <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
    <!--[if lt IE 9]>
      <script src="http://cdn.bootcss.com/html5shiv/3.6.2/html5shiv.js"></script>
    <![endif]-->
  </head>
  <body>
    <div class="container">
      <div class="demo-headline">
        <h1 class="demo-logo">
          <small>山东大学第二医院</small>
        </h1>
      </div> <!-- /demo-headline -->

      <h1>系统集成平台</h1>

      <div class="login">
        <div class="login-screen">
          <div class="login-icon">
            <h4><small>管理员登录</small></h4>
          </div>
            
             @using (Html.BeginForm((string) ViewBag.FormAction, "SGAccount", new {returnUrl = Request.QueryString["ReturnUrl"]}))
             {
                 <div class="login-form">
                     <div class="control-group">
                         <input type="text" class="login-field" value="" placeholder="登录名" name="UserName" id="login-name" />
                         @Html.ValidationMessageFor(model => model.UserName)
                         <label class="login-field-icon fui-man-16" for="login-name"></label>
                     </div>

                     <div class="control-group">
                         <input type="password" class="login-field" value="" placeholder="密码" name="Password" id="login-pass" />
                         @Html.ValidationMessageFor(model => model.Password)
                         <label class="login-field-icon fui-lock-16" for="login-pass"></label>
                     </div>
                     
  
                <div id="error_msg" class="error_msg">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                </div>
              
                     <input class="btn btn-primary btn-large" tabIndex=3 value="登  录" type="submit"  />

                     <a class="login-link" href="#">忘记密码?</a>
                 </div>
             }
        </div>
      </div>
        

    </div> <!-- /container btn-block-->



